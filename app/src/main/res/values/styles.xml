<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#2196F3</item>
        <item name="colorAccent">#FF5722</item>
        <item name="android:statusBarColor">@color/colorOffWhite</item>
    </style>

    <style name="AppTheme.DarkStatusBar" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#2196F3</item>
        <item name="colorAccent">#FF5722</item>
        <item name="android:statusBarColor">@color/colorOffWhite</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.CustomToolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="Theme.RecyclerWhatsApp" parent="AppTheme">
        <item name="android:colorEdgeEffect">@color/colorFragmentWhatsappToolbar</item>
    </style>

    <style name="Theme.RecyclerFb" parent="AppTheme">
        <item name="android:colorEdgeEffect">@color/colorFragmentFbToolbar</item>
    </style>

    <style name="Theme.RecyclerInsta" parent="AppTheme">
        <item name="android:colorEdgeEffect">@color/colorFragmentInstaToolbar</item>
    </style>

    <style name="Theme.RecyclerSms" parent="AppTheme">
        <item name="android:colorEdgeEffect">@color/colorFragmentSmsToolbar</item>
    </style>

    <style name="Theme.RecyclerMessageViewer" parent="AppTheme">
        <item name="android:colorEdgeEffect">@color/colorWhite</item>
    </style>


</resources>