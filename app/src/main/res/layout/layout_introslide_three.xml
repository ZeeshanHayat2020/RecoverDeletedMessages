<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/slide_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <ImageView
            android:id="@+id/intro_slideOne_imageView"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/ic_intro_slide_insta" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/slide_titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_cardView"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_5sdp"
        android:text="@string/introSlideWaTtitle"
        android:textColor="@color/colorFragmentInstaStatusBar"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_titleTV"
        android:layout_centerInParent="true"
        android:text="@string/introSlideWaDesc"
        android:textColor="@color/colorFragmentInstaStatusBar"
        android:textSize="16sp" />
</RelativeLayout>